use std::io;  
fn main(){
    let mut strr = String::new();
    io::stdin()
    .read_line(&mut strr)
    .expect("Failed to read line");

    let count = first_word(&strr);
    strr.clear();
    println!("{count}");
}
fn first_word(s: &String) -> usize {
    let bytes = s.as_bytes();

    for (i, &item) in bytes.iter().enumerate() {
        if item == b' ' {
            return i;
        }
    }

    s.len()
    
}
